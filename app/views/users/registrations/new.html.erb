<div class="section">
  <div class="form-container">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "login-form-text-field" %>
      </div>
      
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-form-text-field" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 桁以上に設定する必要があります</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "login-form-text-field" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "login-form-text-field" %>
      </div>

      <div class="actions">
        <%= f.submit "新しいアカウントを作成", class: "bg-coral account-form-btn-primary" %>
      </div>
    <% end %>

    <%= link_to "アカウントをお持ちの方はログイン", :new_user_session, class: "account-form-btn-secondary no-underline" %>
  </div>
</div>
