<div class="section">
  <%= render "shared/user_setting" %>

  <%= render "shared/error", obj: @user %>

  <div class="form-container">
    <h2>プロフィール</h2>
    <%= form_for(@user, as: @user_name, url: user_profile_path(@user_name), html: { method: :put }) do |f| %>
      <div class="profile-item">
        <%= f.label :avatar, 'アイコン画像' %><br />
        <%= image_tag @user.avatar.url, class: 'rounded-circle', width: '100', height: '100' %>
        <%= f.file_field :avatar %>
      </div>

      <div class="profile-item">
        <%= f.label :name, '名前' %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "text_field" %>
      </div>
        
      <div class="profile-item">
        <%= f.label :introduction, '自己紹介' %><br />
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "text_area" %>
      </div>
      <div class="btn-container">
        <%= link_to "キャンセル", :users_profile, class: "cancel-btn no-underline" %>
        <div class="actions">
            <%= f.submit "保存", class: "save-btn bg-coral" %>
        </div>
      </div>
    <% end %>
  <div>
</div>
